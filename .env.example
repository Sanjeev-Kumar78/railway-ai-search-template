# Create a .env file in the root directory for docker-compose

# Cohere API Key (get from https://cohere.ai/)
COHERE_API_KEY=your_cohere_api_key_here

# Database URL (for local development with docker-compose)
DATABASE_URL=postgresql://postgres:password@localhost:5432/search_db

# Frontend -> Backend URL for local development
NEXT_PUBLIC_API_URL=http://localhost:3001

# Worker configuration (optional)
BATCH_SIZE=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SKIP_EXISTING=true
VERBOSE=true
